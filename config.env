# Environment Configuration
# Database settings
DB_PATH=cac_data.db
DB_BACKUP_PATH=backups/

# WebSocket settings
WS_HOST=localhost
WS_PORT=8765
WS_MAX_CONNECTIONS=100

# API settings
API_HOST=localhost
API_PORT=8000
API_TIMEOUT=30

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/cac.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security settings
SECRET_KEY=your-secret-key-here
JWT_EXPIRATION=3600
CORS_ORIGINS=*

# Feature flags
ENABLE_GAIT_ANALYSIS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_DATA_EXPORT=true
ENABLE_BACKUP=true

# Performance settings
MAX_SENSOR_DATA_POINTS=1000
CACHE_TTL=300
BATCH_SIZE=100

# Development settings
DEBUG_MODE=false
MOCK_SENSOR_DATA=false
VERBOSE_LOGGING=false
